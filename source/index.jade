extends layout

block content
  #mobile
    a#trigger(href="")
  #desktop
    #flash
    #setup.full
      .pg1
        include logo
        h1 Produck Hunt
        a#start(href="/") Play the Game!
        //.number
          input(type="text", placeholder="Enter Phone Number", id="phone-input")
        .demo
          .hand
            .bg
            .overlay
            .finger
          .computer
            .bg
            .fly1
            .fly2
            .dog
            .overlay
          
      .pg2
        h2 Go to produckhunt.co on your phone and enter in code <strong class="id"></strong>
        p Waiting for connection from phone&hellip;
        //p Didn't get a text? Go to produckhunt.co and enter <strong class="id"></strong>
        include phone
        p (Currently only tested with Chrome and an iPhone; we'll test more devices soon!)

      .pg3
        h2 Practice Shooting!
        h3 Hold like a gun and tap the screen
        #progress
          .progresscircle.p1
          .progresscircle.p2
          .stop
          .hand
            .bg
            .overlay
            .finger

      .pg4
        .center
          h2 Calibrating Gun
          h3 Point your phone and tap/fire at each target
        .target
          .dot
          .spinner

      .pg5.full
        #dog
        #dogLaugh
        #gameOver
          h2 Game Over
          a(href="/")#restart Try Again
        #showscore
        #dot
        .bird-parent.bird-parent1
          .frantic
            .bird.bird1
              .details
                h3
                p
        .bird-parent.bird-parent0
          .frantic
            .bird.bird0
              .details
                h3
                p
        .bird-parent.bird-parent2
          .frantic
            .bird.bird2
              .details
                h3
                p
        .grass
        .stats
          .container
            .row
              .col-xs-3
                .stats-box#stats-votes
                  span VOTES LEFT
                  .vote.v1
                  .vote.v2
                  .vote.v3
              .col-xs-5
                .stats-box.stats-hunted 
                  span PRODUCTS HUNTED
                  .stat-hit
                  .stat-hit
                  .stat-hit
                  .stat-hit
                  .stat-hit
                  .stat-hit
              .col-xs-4
                .stats-box.stats-score
                  span SCORE (LVL <em id="current-level">1</em>)
                  strong#score 000000

  style#css

